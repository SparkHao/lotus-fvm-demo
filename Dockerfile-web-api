# syntax=docker/dockerfile:1.4

FROM ghcr.io/jimpick/lotus-fvm-localnet-web-base@sha256:da1237bd0cc9f95723cebacca40a28206c4a32a4dfdac2452a02e98c96343794

USER root

WORKDIR /home/ubuntu/web

COPY Caddyfile .
RUN mv Caddyfile /etc/caddy/Caddyfile

COPY package.json .
COPY package-lock.json .
COPY server.mjs .

RUN chown -R ubuntu. .

USER ubuntu

RUN npm install

EXPOSE 3000

CMD bash -c 'caddy start -config /etc/caddy/Caddyfile; node server.mjs'
